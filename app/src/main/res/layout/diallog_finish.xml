<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="15dp"
    app:cardCornerRadius="15dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F3D5A7"
        android:paddingBottom="25sp">

        <TextView
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25sp"
            android:fontFamily="@font/nunito_black"
            android:gravity="center"
            android:paddingHorizontal="15dp"
            android:text="Do you really want to exit now? If you exit without clicking save button your notes will not be saved!"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/cancel_btn_finish"
            android:layout_width="130dp"
            android:layout_height="55dp"
            android:layout_marginTop="20sp"
            android:background="@drawable/back_delete"
            android:fontFamily="@font/nunito_black"
            android:text="Cancel"
            android:textColor="@color/white"
            app:layout_constraintEnd_toStartOf="@id/exit_btn_finish"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title_text" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/exit_btn_finish"
            android:layout_width="130dp"
            android:layout_height="55dp"
            android:layout_marginTop="20sp"
            android:background="@drawable/back_delete"
            android:fontFamily="@font/nunito_black"
            android:text="Exit"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/cancel_btn_finish"
            app:layout_constraintTop_toBottomOf="@id/title_text" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>